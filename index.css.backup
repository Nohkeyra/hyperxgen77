
@tailwind base;
@tailwind components;
@tailwind utilities;

/* Root CSS Variables and Light Mode Defaults */
@layer base {
  :root {
    --sat: env(safe-area-inset-top, 0px);
    --sab: env(safe-area-inset-bottom, 0px);
    --header-base: 3.5rem; /* Mobile Header 56px */
    --app-controls-bar-base: 3rem; /* Mobile Footer 48px - Compact */
    --header-h: calc(var(--header-base) + var(--sat));
    --app-controls-bar-h: calc(var(--app-controls-bar-base) + var(--sab));
    --sidebar-w: 300px;
    
    --color-primary-bg: #FBF5E7;
    --color-secondary-bg: #EAEAEA;
    --color-text-primary: #2D2D2F;
    --color-text-secondary: #5A5A5C;
    --color-text-soft: #8E8E91;
  }

  @media (min-width: 640px) {
    :root {
      --header-base: 4rem; /* Desktop 64px */
      --app-controls-bar-base: 4rem; /* Desktop 64px */
    }
  }
}

.dark {
  --color-primary-bg: #09090b;
  --color-secondary-bg: #18181b;
  --color-text-primary: #FBF5E7;
  --color-text-secondary: #A1A1AA;
  --color-text-soft: #71717A;
}

body { 
  @apply antialiased overflow-hidden;
  background-color: var(--color-primary-bg);
  margin: 0; 
  color: var(--color-text-primary);
  height: 100dvh;
  width: 100vw;
  position: fixed;
  transition: background-color 0.3s ease, color 0.3s ease;
  font-family: 'Inter', sans-serif;
}

#root { 
  height: 100dvh; 
  width: 100vw; 
  overflow: hidden; 
  display: flex;
  flex-direction: column;
}

/* App Shell Structure */
.app-shell {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative;
}

.app-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative;
  /* Ensure main takes space between header and footer */
  margin-top: var(--header-h);
  margin-bottom: var(--app-controls-bar-h);
}

.app-main-content-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden; /* Prevent double scrollbars, let panels handle scrolling */
  position: relative;
  width: 100%;
}

/* Global Alignment Container */
.hx-container {
  width: 100%;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 1.5rem; /* Standard horizontal padding (24px) */
}

/* Global Background Pattern */
.bg-grid-pattern {
  background-image: linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.25) 50%), linear-gradient(90deg, rgba(255, 0, 0, 0.06), rgba(0, 255, 0, 0.02), rgba(0, 255, 0, 0.06));
  background-size: 100% 2px, 3px 100%;
}

/* Canvas Box Styling */
.canvas-stage {
  width: 100%;
  max-width: 900px;
  aspect-ratio: 16/9;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  border: 4px solid var(--color-text-primary);
  box-shadow: 0 16px 40px rgba(0,0,0,0.25);
  background-color: #1a1a1a;
  flex-shrink: 0;
  transition: border-color 0.3s ease, background-color 0.3s ease;
}

.dark .canvas-stage {
  border-color: rgba(255, 255, 255, 0.1);
  background-color: #000000;
}

/* Responsive Canvas */
@media (max-width: 1024px) {
  .canvas-stage {
    aspect-ratio: auto;
    height: 50vh;
  }
}

/* Scrollbar Standardization */
.custom-scrollbar::-webkit-scrollbar { width: 4px; height: 4px; }
.custom-scrollbar::-webkit-scrollbar-track { background: transparent; }
.custom-scrollbar::-webkit-scrollbar-thumb { background: var(--color-text-secondary); border-radius: 2px; }
.dark .custom-scrollbar::-webkit-scrollbar-thumb { background: rgba(255, 255, 255, 0.1); }
.no-scrollbar::-webkit-scrollbar { display: none; }

/* Animation Keyframes */
@keyframes scan {
  0% { top: -10% }
  100% { top: 110% }
}
.animate-scan { animation: scan 2s linear infinite; }
/* Fix for Appsgeyser clipping */
html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
}

#root {
    width: 100%;
    min-height: 100vh;
    padding-top: env(safe-area-inset-top, 0px);
    padding-bottom: env(safe-area-inset-bottom, 0px);
    padding-left: env(safe-area-inset-left, 0px);
    padding-right: env(safe-area-inset-right, 0px);
}

/* Ensure content isn't hidden by browser UI */
@media (display-mode: standalone) {
    body {
        padding-top: 20px; /* Space for mobile status bar */
    }
}
